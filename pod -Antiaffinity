apiVersion: apps/v1
kind: Deployment
metadata:
  name: podantiaffinity
spec:
  replicas: 6
  selector:
    matchLabels:
      app: tomcat
  strategy: 
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 0
      maxUnavailable: 1
  template:  
    metadata:
      name: tomcat-pod
      labels:
        app: tomcat
    spec:
      containers:
        - name: tom-container
          image: te97ja/dockermulti:latest
      affinity:
        podAntiAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
          - labelSelector:
              matchExpressions:
                - key: app
                  operator: In
                  values:
                    - tomcat
            topologyKey: "kubernetes.io/hostname"  
